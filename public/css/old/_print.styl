/*==============================
 *=== PRINT
 *===============================*/

@media print
  *
    background: transparent !important
    color: black !important
    text-shadow: none !important
    filter: none !important
    -ms-filter: none !important
  html,
  body
    font-size: 12pt
    font-family: georgia, serif
  img
    max-width: 100%
  a, a:visited
    color: #444 !important
    text-decoration: underline
  a[href]:after
    content: " (" attr(href) ") "
    font-size: 90%
    .m-grid &,
    .navigation &
      content: ""
  a[href^="#"]:after,
  a[href^="javascript:"]:after
    content: ""
  abbr[title]:after
    content: " (" attr(title) ")"
    font-size: 90%
  pre, blockquote
    border: 1px solid #999
    page-break-inside: avoid
  thead
    display: table-header-group
  tr, img
    page-break-inside: avoid
  @page
    margin: 0.5cm

  p, h2, h3
    orphans: 3
    widows: 3
  h2, h3
    page-break-after: avoid
  [role="navigation"],
  form,
  #respond
    display: none

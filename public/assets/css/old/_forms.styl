 *===============================*/
//Validation
.wpcf7
  .wpcf7-not-valid,
  .wpcf7-not-valid-tip,
  input:invalid,
  textarea:invalid
    color: error
  .wpcf7-not-valid-tip
    position: static !important
  .wpcf7-validation-errors
    background: error
    color: lighten(error, 25%)
  .wpcf7-validation-errors,
  .wpcf7-not-valid-tip
    border: none !important
  .wpcf7-mail-sent-ok
    background: success
    color: lighten(success, 25%)
  .wpcf7-response-output
    border-radius: 5px

form,
fieldset
  margin-bottom: veritcalspace

input,
textarea,
button,
select
  margin: 0
  font-size: 100%
  font-family: para
  line-height: normal
  vertical-align: baseline

label,
input[type="button"],
input[type="submit"],
input[type="reset"],
input[type="image"],
button,
.btn
  cursor: pointer

input[type=search]
  -webkit-appearance: textfield

input[type="search"]::-webkit-search-decoration
  display: none

input[type="search"]::-webkit-search-cancel-button
  cursor: pointer

\::-webkit-input-placeholder
  color: #ddd
  text-transform: uppercase

input:-moz-placeholder
  color: #ddd
  text-transform: uppercase

\::-webkit-validation-bubble-message

textarea
  resizable(vertical)
  height: 6.25em

input,
textarea
  box-sizing
  width: 100%

input[type="checkbox"],
input[type="radio"]
  margin-right: 5px

input[type="text"],
input[type="password"],
input[type="tel"],
input[type="email"],
input[type="url"],
input[type="search"],
textarea
  fontSize(48)
  font-family: headings
  padding: .1em .3em
  border-radius: 5px
  border: 1px solid #c7c7c7
  box-shadow: inset 0 1px 5px rgba(0, 0, 0, 0.2)
  outline: none
  transition: all 0.2s ease-in-out
  &:hover,
  &:focus
    border: 1px solid linkColorHover
    box-shadow: inset 0 1px 5px rgba(0, 0, 0, 0.2), 0 0 10px linkColorHover

input[type="submit"],
button
  -webkit-appearance: none
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  fontSize(48)
  font-family: headings
  padding: .1em .3em
  border-radius: 5px
  border: 1px solid #c7c7c7
  text-transform: uppercase
  background: submitColor
  border: 1px solid #329db7
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3), inset 0 1px 1px rgba(132, 217, 238, 1)
  color: #2a7d91
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.23)
  transition: all 0.2s ease-in-out
  &:hover,
  &:focus
    background: lighten(submitColor, 10%)
  &:active
    background: lighten(submitColor, 10%)
    box-shadow: 0 1px 2px rgba(255, 255, 255, 0.3), inset 0 4px 7px rgba(5, 31, 37, 0.2)

.btn
  line-height: normal
  display: inline-block
  background-color: white
  fontSize(14)
  padding: .8em 1em
  border-radius: 3px
  box-shadow: 0 0 0 1px linkColor
  &:hover,
  &:focus
    color: white
    background: linkColorHover
    text-decoration: none
  &.offline
    cursor: not-allowed
    color: white
    background: error
    box-shadow: 0 0 0 1px error

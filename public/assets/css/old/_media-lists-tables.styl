/*==============================
 *=== group MEDIA
 *===============================*/
object,
embed,
img
  max-width: 100%
  height: auto

audio:not([controls])
  display: none

img
  -ms-interpolation-mode: bicubic
  a &
    border: none

/*==============================
 *=== group LISTS
 *===============================*/
ol
  list-style: decimal

ul
  list-style: square

ul,
ol
  margin-left: .5em
  padding-left: 1em

ul ul,
ul ol,
ol ul,
ol ol
  margin: .5em 0

li
  line-height: lineheight

li  ul,
li  ol

dl
  margin: 0 0 veritcalspace 0

dl dt
  font-weight: bold

dd
  margin-left: veritcalspace

/*==============================
 *=== group TABLES
 *===============================*/

table
  border-collapse: collapse
  border-spacing: 0
  background: white
  color: bgcolor

th
  font-weight: bold

th, td
  padding: .5em 1em
  border: 1px solid

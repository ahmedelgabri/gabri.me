// VARIABLES

// Links
linkColor= #2196F3
linkColorHover= lighten(linkColor, 20%)
tabcolor= rgba(25, 161, 195, 0.4)

// Grays
black= #000
grayDark= lighten(black, 25%)
gray= lighten(black, 50%)
grayLight= lighten(black, 75%)
grayLighter= lighten(black, 90%)
white= #fff

// Accent Colors
bgcolor=oldlace
textcolor= rgba( darken( hue(bgcolor, 240%) , 90%), .6 )
// textcolor= rgba(72, 27, 4, 0.6)
sectextcolor= #52504E
error= #b03333
success= #2f831f
colorname= #eee
submitColor= linkColor
btnText= #171c1e

// Baseline grid
basefont= 16

//16px
lineheight= 1.5
veritcalspace= 1.5em

//fonts
monospace= Fira Code, Input, Fira Mono, Inconsolata, Source Code Pro, Droid Sans Mono, Roboto Mono, menlo, monaco, consolas,"monospace"
fontFamily = -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"

// Griditude
// Modify the grid styles in mixins.less
siteWidth= 1000
gridColumns= 6
gridColumnWidth= 150 / siteWidth * 100%
gridGutterWidth= 20 / siteWidth * 100%
extraSpace= gridGutterWidth * 2



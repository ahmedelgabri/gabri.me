{
	"version": 2,
	"regions": ["all"],
	"alias": ["gabri.me", "www.gabri.me"],
	"builds": [
		{
			"src": "package.json",
			"use": "@now/static-build",
			"config": {"distDir": "public"}
		},
		{
			"src": "api/*.js",
			"use": "@now/node"
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/api/$1.js"
		},
		{
			"src": "/(blog|work)",
			"dest": "/",
			"status": 301
		},
		{
			"src": "/feed",
			"dest": "/feed.xml",
			"status": 301
		}
	]
}
